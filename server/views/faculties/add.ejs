<% include ../partials/header.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
            <label for="FacultyidTextField">Faculty ID</label>
            <input
              type="number"
              class="form-control"
              id="FacultyidTextField"
              placeholder="Enter the Faculty ID"
              name="Facultyid"
              required
            />
          </div>

        <div class="from-group">
          <label for="FacultynameTextField">Faculty Name</label>
          <input
            type="text"
            class="form-control"
            id="FacultynameTextField"
            placeholder="Enter the Faculty Name:"
            name="Facultyname"
            required
          />
        </div>

        <div class="from-group">
            <label for="DepartmentTextField">Department</label>
            <input
              type="text"
              class="form-control"
              id="DepartmentTextField"
              placeholder="Enter the Department:"
              name="Department"
              required
            />
          </div>

          <div class="from-group">
            <label for="SubjectTextField">Subject</label>
            <input
              type="text"
              class="form-control"
              id="SubjectTextField"
              placeholder="Enter the Subject:"
              name="Subject"
              required
            />
          </div>
        

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/faculties" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
 <%- include ../partials/footer.ejs %>
